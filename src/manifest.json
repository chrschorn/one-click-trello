{
  "manifest_version": 2,
  "name": "One-click send to Trello",
  "description": "This extension allows the user to send the current page to Trello with only one click.",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/lib/jquery-3.2.1.min.js",
      "js/lib/trelloClient.js",
      "js/trelloWrapper.js",
      "js/store.js",
      "js/eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon128round.png",
    "32": "icon128round.png",
    "48": "icon128round.png",
    "128": "icon128round.png"
  },
  "options_ui": {
    "page": "settings.html",
    "chrome_style": false
  },
  "permissions": [
    "notifications",
    "contextMenus",
    "activeTab",
    "storage"
  ]
}
