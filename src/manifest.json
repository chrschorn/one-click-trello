{
  "manifest_version": 2,
  "name": "One-click send to Trello",
  "description": "Save the current page with only one click on the extension button.",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/lib/jquery-3.2.1.min.js",
      "js/lib/trelloClient.js",
      "js/trelloWrapper.js",
      "js/store.js",
      "js/eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "html/settings.html",
    "chrome_style": false
  },
  "permissions": [
    "notifications",
    "contextMenus",
    "activeTab",
    "storage",
    "sessions"
  ],
  "web_accessible_resources": [
    "icons/*.png",
    "*.png"
  ]
}
